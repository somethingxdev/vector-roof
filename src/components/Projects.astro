---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
---

<div class="container py-10 sm:py-24" id="projects">
  <div class="flex-stack items-start sm:items-center mb-5 md:mb-[50px]">
    <h2 class="section-title">вЫПОЛНЕННЫЕ ПРОЕКТЫ</h2>
    <a href="#" class="text-[#9EA1AB] font-semibold text-nowrap shrink-0">[ Наши работы ]</a>
  </div>

  <div class="flex flex-col lg:flex-row gap-5 mb-10">
    <div class="relative group">
      <Image src={import('../assets/projects/1.png')} quality={100} alt="image" class="group-hover:brightness-75 transition-all" />
      <div class="lg:absolute lg:m-5 drop-shadow mt-[10px] bottom-0 left-0 bg-white p-4 flex items-baseline rounded-lg gap-3">
        <svg width="27" height="14" class="shrink-0" viewBox="0 0 27 14" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M18 0.949219H12.2582L0 13.9492H5.74177L18 0.949219Z" fill="#F43333"></path>
          <path d="M27 0.949219H21.2582L9 13.9492H14.7418L27 0.949219Z" fill="#F43333"></path>
        </svg>
        <div class="flex flex-col">
          <span class="text-[#202228] uppercase lg:normal-case font-bold">ЖК Светлогорский</span>
          <p class="text-[#848898] text-sm">Красноярск, пер Светлогорский, д 12</p>
        </div>
      </div>
      <a
        href="#"
        class="absolute bg-[#2E3037] hover:bg-primary opacity-0 transition-opacity group-hover:opacity-100 top-5 right-5 w-12 h-12 rounded-full grid place-items-center place-content-center">
        <Icon name="arrow" />
      </a>
    </div>
    <div class="flex flex-col gap-5">
      <div class="relative w-full group">
        <Image src={import('../assets/projects/2.png')} quality={100} alt="image" class="group-hover:brightness-75 transition-all" />
        <div class="lg:absolute lg:m-5 drop-shadow mt-[10px] bottom-0 left-0 bg-white p-4 flex items-baseline rounded-lg gap-3">
          <svg width="27" height="14" class="shrink-0" viewBox="0 0 27 14" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M18 0.949219H12.2582L0 13.9492H5.74177L18 0.949219Z" fill="#F43333"></path>
            <path d="M27 0.949219H21.2582L9 13.9492H14.7418L27 0.949219Z" fill="#F43333"></path>
          </svg>
          <div class="flex flex-col">
            <span class="text-[#202228] uppercase lg:normal-case font-bold">ЖК Светлогорский</span>
            <p class="text-[#848898] text-sm">Красноярск, ул Академгородок, д 54,</p>
          </div>
        </div>
        <a
          href="#"
          class="absolute bg-[#2E3037] hover:bg-primary opacity-0 transition-opacity group-hover:opacity-100 top-5 right-5 w-12 h-12 rounded-full grid place-items-center place-content-center">
          <Icon name="arrow" />
        </a>
      </div>

      <div class="relative w-full group">
        <Image src={import('../assets/projects/3.png')} quality={100} alt="image" class="group-hover:brightness-75 transition-all" />
        <div class="lg:absolute lg:m-5 drop-shadow mt-[10px] bottom-0 left-0 bg-white p-4 flex items-baseline rounded-lg gap-3">
          <svg width="27" height="14" class="shrink-0" viewBox="0 0 27 14" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M18 0.949219H12.2582L0 13.9492H5.74177L18 0.949219Z" fill="#F43333"></path>
            <path d="M27 0.949219H21.2582L9 13.9492H14.7418L27 0.949219Z" fill="#F43333"></path>
          </svg>
          <div class="flex flex-col">
            <span class="text-[#202228] uppercase lg:normal-case font-bold">ЖК Светлогорский</span>
            <p class="text-[#848898] text-sm">Красноярск, ул 1-я Смоленская, д 16,</p>
          </div>
        </div>
        <a
          href="#"
          class="absolute bg-[#2E3037] hover:bg-primary opacity-0 transition-opacity group-hover:opacity-100 top-5 right-5 w-12 h-12 rounded-full grid place-items-center place-content-center">
          <Icon name="arrow" />
        </a>
      </div>
    </div>
  </div>
  <div class="text-end">
    <a href="/projects" class="button w-full md:w-auto justify-center inline-flex items-center gap-2 md:justify-end"
      >Все проекты
      <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12.25 6.94922L6.71484 1.41406M12.25 6.94922L6.71484 12.4844M12.25 6.94922H0.75" stroke="white" stroke-width="2"></path>
      </svg>
    </a>
  </div>
</div>
